<%= form_tag search_result_path, method: "get" do %>
<h3>Search for a card by name:  <%= text_field_tag :query%> <%= submit_tag "Search"%></h3>

<% end %>
<br />
<h2><% if flash[:results] %>
  <%= flash[:results] %>
<% end %>
</h2>

<ul>
  <% @cards.sort_by{ |card| card.name}.each do |card|  %>
    <li><%= link_to card.name, card_path(card) %></li>
  <% end.sort %>
</ul>
