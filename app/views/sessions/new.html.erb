<div class="alert alert-danger" role="alert">
  <h1> <%= flash[:message]%>
  </h1>
</div>
<h1>Please Log In</h1>

<%= form_tag '/sessions' do %>
  <div class="form-group">
    Username: <%= text_field_tag 'username', "", class:"form-control" %><br>
  </div>

  <div class="form-group">
    Password: <%= password_field_tag 'password',"", class:"form-control" %><br>
  </div>

  <%= submit_tag  "Log In", class: "btn btn-primary"%>

<% end %>
